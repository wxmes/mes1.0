
@{
    Layout = "~/Views/Shared/_LayoutPageBaseEdit.cshtml";
}
<div class="box-body">
    <div class="col-md-12">
        <div class="form-group">
            <label class="col-sm-2 control-label">上级模块</label>
            <div class="col-sm-10">
                <div class="input-group">
                    <input type="text" name="ParentName" id="ParentName" class="form-control" data-pure-clear-button placeholder="上级" readonly="readonly">
                    <span id="menuBtn" class="input-group-addon pointer"><i class="fa fa-search"></i></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label m">名称</label>
            <div class="col-sm-10">
                <input type="text" name="Name" data-pure-clear-button class="form-control" placeholder="名称">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">图标</label>
            <div class="col-sm-10">
                <input type="text" name="Icon" data-pure-clear-button class="icon-picker">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label ">区域</label>
            <div class="col-sm-10">
                <input type="text" name="Area" class="form-control" data-pure-clear-button placeholder="区域">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">控制器</label>
            <div class="col-sm-10">
                <input type="text" name="Controller" class="form-control" data-pure-clear-button placeholder="控制器">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">方法</label>
            <div class="col-sm-10">
                <input type="text" name="Action" class="form-control" data-pure-clear-button placeholder="方法">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">地址(Url)</label>
            <div class="col-sm-10">
                <input type="text" name="OpenUrl" class="form-control" data-pure-clear-button placeholder="地址(Url)">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">选项</label>
            <div class="col-sm-10">
                <label>
                    <input type="checkbox" data-flag="icheck" class="minimal" name="IsShowMenu" id="IsShowMenu" />模块显示
                </label>
                <label>
                    <input type="checkbox" data-flag="icheck" class="minimal" name="HaveMenuPermission" id="HaveMenuPermission" />模块权限
                </label>
                <label>
                    <input type="checkbox" data-flag="icheck" class="minimal" name="HaveFunctionPermission" id="HaveFunctionPermission" />模块按钮权限
                </label>
           
                <label>
                    <input type="checkbox" data-flag="icheck" class="minimal" name="IsFreeze" id="IsFreeze" />冻结
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">排序号</label>
            <div class="col-sm-10">
                <input type="text" name="OrderNo" class="form-control" data-pure-clear-button placeholder="排序号">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">备注</label>
            <div class="col-sm-10">
                <textarea class="form-control" name="Remark" data-pure-clear-button placeholder="备注"></textarea>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="ParentId" name="ParentId" />
<input type="hidden" id="MenuId" name="MenuId" value="@Context.Request.Query["id"]" />
<input type="hidden" id="IsCopy" name="IsCopy" value="@Context.Request.Query["iscopy"]" />
<link href="~/lib/plugins/bootstrap-iconpicker/css/icon-picker.min.css" asp-append-version="true" rel="stylesheet" />
<script src="~/lib/plugins/bootstrap-iconpicker/js/iconPicker.js" asp-append-version="true"></script>
<div class="dropdown-menu" id="content" style="display:none;">
    <div class="ip-control">
        <div class="box-tools">
            <div class="input-group" id="input-group" style="padding-left:5px">
                <input type="text" id="searchValueKey" class="form-control input-sm" placeholder="请输入关键字...">
                <div class="input-group-btn">
                    <a class="btn btn-sm btn-default" id="searchValue"><i class="fa fa-search"></i></a>
                </div>
            </div>
        </div>
    </div>
    <ul id="select-tree" class="jstree"></ul>
</div>
<environment names="Development">
    <script src="~/app/system/menu/edit.js" asp-append-version="true"></script>
</environment>
<environment names="Staging,Production">
    <script src="~/build/js/system/menu/edit.min.js" asp-append-version="true"></script>
</environment>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers